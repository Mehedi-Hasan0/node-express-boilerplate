{
  "name": "node-express-boilerplate",
  "version": "1.0.0",
  "main": "dist/server.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.ts",
    "lint": "eslint src/**/*.{ts,tsx} --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "prepare": "husky && chmod +x .husky/*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --no-warn-ignored",
      "prettier --write"
    ]
  },
  "keywords": [
    "nodejs",
    "boilerplate-templates",
    "express.js",
    "express-boilerplate",
    "nodejs-boilerplate"
  ],
  "author": "Md.Mahedi Hasan",
  "license": "ISC",
  "description": "Simple and easy to setup node.js, express.js boilerplate template. Built with typescript, node.js, express.js, eslint, prettier, husky and more.",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.1",
    "@types/http-status": "^0.2.30",
    "@types/node": "^22.15.2",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.25.1",
    "eslint-plugin-prettier": "^5.2.6",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^15.5.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "http-status": "^2.1.0",
    "mongoose": "^8.14.0",
    "zod": "^4.1.9"
  }
}
